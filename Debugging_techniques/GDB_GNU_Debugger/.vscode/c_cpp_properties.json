    "version": 4,
    "configurations": [
        {
            "name": "Windows",
            "includePath": [
                "${workspaceFolder}/header",  
                "${workspaceFolder}/**"
            ],
            "defines": [],
            "compilerPath": "C:/MinGW/bin/gcc.exe",  
            "intelliSenseMode": "gcc-x64",
